@using System.Collections
@using UltimateGuide.Models
@model IEnumerable<Person>

@functions {
  double? GetAge(DateTime? dateofbirth) {
    return dateofbirth.HasValue ? MathF.Round(((float)(DateTime.Now - dateofbirth.Value).TotalDays) / 365.25f) : null;
  }
}

<!DOCTYPE html>
<html>
<head>
  <title>@ViewData["Title"]</title>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="~/StyleSheet.css" />
</head>
<body>
  <div class="page-content">
    <h1>Welcome to the View</h1>
    @foreach (Person p in Model) {
      <div class="box float-left w-50">
        <h3>@p.PersonName</h3>
        <table class="table w-100">
          <tbody>
            <tr>
              <td>Gender</td>
              <td>@p.Gender</td>
            </tr>
            <tr>
              <td>Date of Birth</td>
              <td>@p.DateofBirth?.ToString("MM/dd/yyyy")</td>
            </tr>
          </tbody>
        </table>
        <a href="person-details/@p.PersonName">Details</a>
        @*<s pan>@p.Gender</span>
        @if (p.DateofBirth != null) {
          <span>@p.DateofBirth.Value.ToString("MM/dd/yyyy")</span>
          <span>@GetAge(p.DateofBirth) years old</span>
        } *@
      </div>
    }
    <a href="person-with-products">Person with Product</a>
  </div>
</body>
</html>